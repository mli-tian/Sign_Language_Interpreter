<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PersonalFragment"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="147dp"
        android:background="@drawable/orange_top"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="0dp">

        <ImageView
            android:id="@+id/h_back"
            android:layout_width="match_parent"
            android:layout_height="150dp" />

        <ImageView
            android:id="@+id/h_head"
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="160dp"
            android:background="@drawable/me" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/h_back"
            android:layout_marginBottom="11dp"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:textColor="@color/white"
                android:textSize="20sp" />

        </RelativeLayout>
    </RelativeLayout>
    <!--橘色部分头图宣示-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal"
        android:id="@+id/nav"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="10dp"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical"
            android:id="@+id/back"
            android:layout_weight="0.2"
            android:src="@mipmap/person" />


        <Button
            android:id="@+id/information"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:text="个人资料"
            android:onClick="check_info"
            android:textColor="@color/Olive"
            android:gravity="start|center_vertical"
            android:outlineProvider="none"
            android:background="@null"
            android:layout_weight="1" />

        <ImageView
            android:layout_gravity="center_vertical"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@mipmap/right"
            android:layout_weight="0.1"
            android:id="@+id/you1" />

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorAccent"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="10dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal"
        android:id="@+id/chan"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="10dp"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical"
            android:id="@+id/update"
            android:layout_weight="0.2"
            android:src="@mipmap/logout" />


        <Button
            android:id="@+id/changes"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:text="修改密码"
            android:onClick="change_pwo"
            android:textColor="@color/Olive"
            android:gravity="start|center_vertical"
            android:outlineProvider="none"
            android:background="@null"
            android:layout_weight="1" />

        <ImageView
            android:layout_gravity="center_vertical"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@mipmap/right"
            android:layout_weight="0.1"
            android:id="@+id/you2" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorAccent"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="10dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal"
        android:id="@+id/abo"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="10dp"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical"
            android:id="@+id/about3"
            android:layout_weight="0.2"
            android:src="@mipmap/about" />


        <Button
            android:id="@+id/about"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:text="关于我们"
            android:onClick="logout"
            android:textColor="@color/Olive"
            android:gravity="start|center_vertical"
            android:outlineProvider="none"
            android:background="@null"
            android:layout_weight="1" />

            <ImageView
                android:layout_gravity="center_vertical"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@mipmap/right"
                android:layout_weight="0.1"
                android:id="@+id/you3" />


        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorAccent"
            android:layout_marginStart="50dp"
            android:layout_marginEnd="10dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:orientation="horizontal"
            android:id="@+id/lout"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="10dp"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical"
                android:id="@+id/out"
                android:layout_weight="0.2"
                android:src="@mipmap/update" />


            <Button
                android:id="@+id/log_out"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="24sp"
                android:text="退出登录"
                android:onClick="logout"
                android:textColor="@color/Olive"
                android:gravity="start|center_vertical"
                android:outlineProvider="none"
                android:background="@null"
                android:layout_weight="1" />

            <ImageView
                android:layout_gravity="center_vertical"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@mipmap/right"
                android:layout_weight="0.1"
                android:id="@+id/you4" />

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorAccent"
            android:layout_marginStart="50dp"
            android:layout_marginEnd="10dp" />

    </LinearLayout>



